<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.ebremer</groupId>
  <artifactId>BeakGraph</artifactId>
  <name>BeakGraph</name>
  <version>0.10.0</version>
  <description>Library for creating indexed binary storages for Apache Jena Graphs and Datasets</description>
  <issueManagement>
    <system>github</system>
    <url>https://github.com/ebremer/BeakGraph/issues</url>
  </issueManagement>
  <inceptionYear>2021</inceptionYear>
  <developers>
    <developer>
      <id>ebremer</id>
      <name>Erich Bremer</name>
      <email>erich.bremer@stonybrook.edu</email>
      <roles>
        <role>author</role>
      </roles>
    </developer>
  </developers>
  <licenses>
    <license>
      <name>The Apache Software License, Version 2.0</name>
      <url>https://www.apache.org/licenses/LICENSE-2.0.txt</url>
    </license>
  </licenses>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-dependency-plugin</artifactId>
        <version>${maven-dependency-plugin.version}</version>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.14.1</version>
        <configuration>
          <release>25</release>
          <fork>true</fork>
          <compilerArgs>
            <arg>--enable-preview</arg>
          </compilerArgs>
          <compilerArgument>--enable-preview</compilerArgument>
          <executable>${java.home}/bin/javac</executable>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>lib</id>
      <build>
        <finalName>BeakGraph-${project.version}</finalName>
        <plugins>
          <plugin>
            <artifactId>maven-shade-plugin</artifactId>
            <version>${maven-shade-plugin.version}</version>
            <executions>
              <execution>
                <phase>package</phase>
                <goals>
                  <goal>shade</goal>
                </goals>
              </execution>
            </executions>
            <configuration>
              <shadedArtifactAttached>false</shadedArtifactAttached>
              <transformers>
                <transformer>
                  <manifestEntries>
                    <Multi-Release>true</Multi-Release>
                  </manifestEntries>
                </transformer>
                <transformer />
              </transformers>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                  </excludes>
                </filter>
              </filters>
            </configuration>
          </plugin>
          <plugin>
            <artifactId>maven-enforcer-plugin</artifactId>
            <version>${maven-enforcer-plugin.version}</version>
            <executions>
              <execution>
                <id>enforce</id>
                <goals>
                  <goal>enforce</goal>
                </goals>
                <configuration>
                  <rules>
                    <banDuplicatePomDependencyVersions />
                  </rules>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>cmdlinenative</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.graalvm.buildtools</groupId>
            <artifactId>native-maven-plugin</artifactId>
            <version>${native-maven-plugin.version}</version>
            <extensions>true</extensions>
            <executions>
              <execution>
                <id>build-native</id>
                <phase>package</phase>
                <goals>
                  <goal>build</goal>
                </goals>
              </execution>
            </executions>
            <configuration>
              <imageName>beakgraph</imageName>
              <mainClass>com.ebremer.beakgraph.cmdline.beakgraph</mainClass>
              <debug>true</debug>
              <skipNativeTests>true</skipNativeTests>
              <verbose>true</verbose>
              <buildArgs>
                <buildArg>--no-fallback</buildArg>
                <buildArg>--enable-url-protocols=https</buildArg>
                <buildArg>-H:+AddAllCharsets</buildArg>
                <buildArg>-march=native</buildArg>
                <buildArg>--no-server</buildArg>
                <buildArg>-J-Xmx32G</buildArg>
              </buildArgs>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>cmdlinejar</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-shade-plugin</artifactId>
            <version>${maven-shade-plugin.version}</version>
            <executions>
              <execution>
                <phase>package</phase>
                <goals>
                  <goal>shade</goal>
                </goals>
              </execution>
            </executions>
            <configuration>
              <shadedArtifactAttached>false</shadedArtifactAttached>
              <transformers>
                <transformer>
                  <mainClass>com.ebremer.beakgraph.BG</mainClass>
                  <manifestEntries>
                    <Multi-Release>true</Multi-Release>
                  </manifestEntries>
                </transformer>
                <transformer />
              </transformers>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                  </excludes>
                </filter>
              </filters>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  <repositories>
    <repository>
      <id>central</id>
      <name>Maven Central</name>
      <url>https://repo1.maven.org/maven2</url>
    </repository>
    <repository>
      <id>halcyon</id>
      <name>Halcyon</name>
      <url>https://cursus.bmi.stonybrookmedicine.edu/releases</url>
    </repository>
    <repository>
      <id>apache</id>
      <name>apache</name>
      <url>https://repository.apache.org/snapshots</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>org.apache.jena</groupId>
      <artifactId>apache-jena-libs</artifactId>
      <version>5.6.0</version>
      <type>pom</type>
      <scope>compile</scope>
    </dependency>
  </dependencies>
  <distributionManagement>
    <repository>
      <id>halcyon</id>
      <url>https://cursus.bmi.stonybrookmedicine.edu/releases</url>
    </repository>
  </distributionManagement>
  <properties>
    <commons-collections.version>4.5.0</commons-collections.version>
    <exec.mainClass>com.ebremer.beakgraph.BeakGraph</exec.mainClass>
    <java.version>25</java.version>
    <maven-shade-plugin.version>3.6.1</maven-shade-plugin.version>
    <jena.version>5.6.0</jena.version>
    <maven-compiler-plugin.version>3.14.1</maven-compiler-plugin.version>
    <rocrate4j.version>0.5.0</rocrate4j.version>
    <jetty.version>11.0.26</jetty.version>
    <jaxb.version>2.4.0-b180830.0359</jaxb.version>
    <commons-compress.version>1.28.0</commons-compress.version>
    <jts.ver>1.20.0</jts.ver>
    <maven-dependency-plugin.version>3.9.0</maven-dependency-plugin.version>
    <native-maven-plugin.version>0.11.3</native-maven-plugin.version>
    <maven-enforcer-plugin.version>3.6.2</maven-enforcer-plugin.version>
    <slf4j.version>2.0.17</slf4j.version>
    <hilbert.ver>0.2.3</hilbert.ver>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <log4j.version>2.25.2</log4j.version>
    <jcommander.version>3.0</jcommander.version>
    <jhdf.version>0.10.0</jhdf.version>
  </properties>
</project>
